apps_domain: {{ apps_domain }}
applications:
- name: atk-broker
  env:
    CF_API: http://api.{{ apps_domain }}
    CF_USER: {{ cf_admin_username }}
    CF_PASS: {{ cf_admin_password }}
    IMAGE_URL: {{ generic_broker_icon }}
